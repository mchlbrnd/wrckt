{
  "$schema": "https://json-schema.org/schema",
  "$id": "Configuration",
  "title": "",
  "type": "object",
  "properties": {
    "projectName": {
      "type": "string",
      "aliases": [
        "name",
        "project"
      ],
      "description": "Project for which to configure nx-htmlhint.",
      "x-prompt": "For which project do you want to configure nx-htmlhint?",
      "x-dropdown": "projects",
      "x-priority": "important"
    },
    "withConfig": {
      "type": "boolean",
      "aliases": [
        "config"
      ],
      "description": "Whether project uses private htmlhint configuration.",
      "default": false,
      "x-prompt": {
        "message": "Create private htmlhint configuration for project?",
        "type": "list",
        "items": [
          {
            "label": "Yes",
            "value": true
          },
          {
            "label": "No",
            "value": false
          }
        ]
      },
      "x-priority": "important"
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false,
      "x-priority": "internal"
    }
  },
  "required": [
    "projectName"
  ],
  "additionalProperties": false
}
